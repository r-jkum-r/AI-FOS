# Multi-stage Dockerfile for Voice Agent Backend (CPU only)

FROM python:3.11-slim AS base

WORKDIR /app

# Install system dependencies + SSL certificates fix
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    ffmpeg \
    libsndfile1 \
    git \
    build-essential \
    && update-ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for caching)
COPY requirements.txt /app/requirements.txt

# Upgrade pip tools
RUN python -m pip install --upgrade pip setuptools wheel

# Install PyTorch CPU build separately (avoids +cpu resolution & SSL fallback issues)
RUN pip install --no-cache-dir torch==2.1.2 --index-url https://download.pytorch.org/whl/cpu

# Install remaining Python dependencies from PyPI
RUN pip install --no-cache-dir -r requirements.txt

# Download models at build time (faster startup)
RUN python -c "from transformers import AutoTokenizer, AutoModelForSeq2SeqLM; \
AutoTokenizer.from_pretrained('facebook/nllb-200-distilled-600M'); \
AutoModelForSeq2SeqLM.from_pretrained('facebook/nllb-200-distilled-600M')"

RUN python -c "from faster_whisper import WhisperModel; \
WhisperModel('medium', device='cpu', compute_type='int8')"

RUN python -c "from TTS.api import TTS; \
TTS('tts_models/multilingual/multi-dataset/xtts_v2')"

# Copy backend application code
COPY backend/ /app/

# Create models directory
RUN mkdir -p /models

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]
